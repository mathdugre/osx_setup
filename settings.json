{
  // Editor
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "editor.snippetSuggestions": "top",
  // Editor :: Appearance
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#ff4081"
  },
  "window.zoomLevel": 0,
  "editor.fontSize": 16,
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontLigatures": true,
  // Terminal panel
  "terminal.integrated.shell.osx": "/usr/local/bin/bash",
  "terminal.integrated.fontSize": 14,
  // Output panel
  "[Log]": {
    "editor.fontSize": 15
  },
  // Formatting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSaveTimeout": 1500,
  "editor.codeActionsOnSaveTimeout": 1000,
  //GIT
  "[git]": {
    "editor.rulers": [50]
  },
  // PYTHON
  "[python]": {
    "editor.rulers": [88]
  },
  "python.autoComplete.addBrackets": true,
  "python.testing.pytestEnabled": true,
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": true,
  "python.linting.flake8Args": ["--docstring-convention numpy"],
  "autoDocstring.docstringFormat": "numpy",
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintUseMinimalCheckers": false,
  // GO
  "go.formatTool": "goreturns",
  "go.autocompleteUnimportedPackages": true,
  // LATEX
  "latex-workshop.view.pdf.viewer": "tab",
  // MARKDOWN
  "markdown-pdf.headerTemplate": "<div style=\"font-size: 9px; margin-left:auto; margin-right: 1cm;\"> <span class='date'></span>",
  //OTHER
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.direnv/**": true,
    "**/.venv/**": true
  },
  "zenMode.hideLineNumbers": false,
  "zenMode.centerLayout": false
}
